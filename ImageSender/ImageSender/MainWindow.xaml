<Window x:Class="ImageGalleryServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Gallery Server" Height="450" Width="600">
    <Grid>
        <Button Content="Refresh Gallery" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Height="30" Click="RefreshButton_Click"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="10,40,10,10">
            <StackPanel Name="GalleryStackPanel" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ScrollViewer>
    </Grid>
</Window>
